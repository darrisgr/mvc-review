@using mvc_review.Models;

@model List<Animal>

<h1>Animal Roster</h1>

@if (Model.Count == 0)
{
    <p>Roster currently empty!</p>
}
else
{
    <a asp-controller="Animal" asp-action="Delete">Send Animals Home</a>
    <table class="table">
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
                Species
            </th>
            <th>
                Description
            </th>
        </tr>

        @foreach (var animal in Model)
        {
            <tr>
                <td>
                    @animal.Id
                </td>
                <td>
                    @animal.Name - <a asp-controller="Animal" asp-action="EditName" asp-route-id="@animal.Id">Edit</a>
                </td>
                <td>
                    @animal.Species
                </td>
                <td>
                    @animal.Description - <a asp-controller="Animal" asp-action="EditDescription" asp-route-id="@animal.Id">Edit</a>
                </td>
            </tr>
        }
    </table>
}
